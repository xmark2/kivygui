<ButtonScreenView>

    MDCarousel:
        id: carousel
        on_slide_progress: root.do_animation_slide_content(*args)
        on_index:
            root.on_index(args[1])
            app.manager_screen.set_bars_colors(app.theme_cls, f"button_{args[1]}")

        ButtonScreenOneScreen:
        ButtonScreenTwoScreen:


    Dots:
        id: dots
        y: "24dp"

    MDIconButton:
        icon: "arrow-left"
        md_bg_color: 0, 0, 0, .2
        x: "12dp"
        pos_hint: {"top": .98}
        on_release: app.manager_screen.current = "menu"
