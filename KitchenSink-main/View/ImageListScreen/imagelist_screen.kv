#:import get_color_from_hex kivy.utils.get_color_from_hex


<ImageListScreenView>

    MDBoxLayout:
        orientation: "vertical"
        padding: 0, 0, 0, "12dp"

        ImageListScreenToolbar:
            title: "Your Libraries"

        RecycleView:
            id: grid_list
            key_viewclass: 'viewclass'
            key_size: 'height'
            bar_width: 0

            RecycleGridLayout:
                cols: 2
                default_size: None, dp(240)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(12)
                padding: dp(12)

    MDFloatingActionButton:
        icon: "cart"
        type: "large"
        pos_hint: {"right": .98}
        y: "24dp"
