#:import os os
#:import colors kivymd.color_definitions.colors
#:import get_color_from_hex kivy.utils.get_color_from_hex

#:set green_color get_color_from_hex(colors["Green"]["800"])


<MainScreenRoundFlatIconButton@MDRoundFlatIconButton>
    icon_color: green_color
    line_color: green_color
    text_color: green_color
    -width: "200dp"
    anchor_x: "left"


<ButtonScreenTwoScreen>

    FitImage:
        source:
            f"{os.environ['KITCHEN_SINK_ASSETS']}/" \
            f"images/button_screen/two_screen/bg.png"

    MDBoxLayout:
        orientation: "vertical"
        spacing: "24dp"
        adaptive_size: True
        pos_hint: {"center_x": .5, "center_y": .5}

        RoundCard:
            size_hint: None, None
            size: "120dp", "120dp"
            radius: self.width / 2
            pos_hint: {"center_x": .5}
            elevation: 3

            AnchorLayout:
                size_hint: None, None
                size: "120dp", "120dp"
                anchor_x: "center"
                anchor_y: "center"

                MDIconButton:
                    icon: "camera"
                    theme_icon_color: "Custom"
                    icon_color: green_color
                    icon_size: "38sp"

        MainScreenRoundFlatIconButton:
            icon: "account"
            text: "Name"

        MainScreenRoundFlatIconButton:
            icon: "mail"
            text: "Email"

        MainScreenRoundFlatIconButton:
            icon: "lock-open"
            text: "Password"

        MainScreenRoundFlatIconButton:
            icon: "lock"
            text: "Confirm Password"

        MDFillRoundFlatButton:
            text: "[color=ffffff]SIGN UP[/color]"
            md_bg_color: green_color
            -width: "200dp"
