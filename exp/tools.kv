<MyLayout>
    slide_text: slider_label
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Accordion:
            orientation: 'horizontal'

            AccordionItem:
                title: 'Panel1'
                collapse: False

                BoxLayout:
                    orientation: "vertical"
#                    size: root.width, root.height

                    Label:
                        text: 'Panel 1 Text'
                        font_size: 32

                BoxLayout:
                    orientation: "vertical"
                    size: root.width, root.height

                    Label:
                        id: name_label
                        text: "What's Your Name?"
                        font_size: 32

                    TextInput:
                        id: name_input
                        multiline: False
                        size_hint: (1, .5)

                    Button:
                        size_hint: (1, .5)
                        font_size: 32
                        text: "Submit"
                        on_press: root.press()

                    Label:
                        id: slider_label
                        text: "Slide the slider"
                        font_size: 32
                        size_hint: (1, .5)

                    Slider:
                        id: slider
                        min: 0
                        max: 100
                        step: 1
                        orientation: 'horizontal'
                        size_hint: (1, .5)
                        on_value: root.slide_it(*args)


            AccordionItem:
                title: 'Panel2'
                Image:
                    source: 'C:\\Users\\xmark\\OneDrive\\Képek\\istockphoto-1280385511-170667a.jpg'

                BoxLayout:
                    orientation: "vertical"
                    size: root.width, root.height

                    Label:
                        id: checkbox_output_label
                        text: ""

                    GridLayout:
            #            checkbox
                        cols:2

                        Label:
                            text: "Pepperoni"
                            font_size:20
                        CheckBox:
                            on_active: root.checkbox_click(self, self.active, "Pepperoni")

                        Label:
                            text: "Cheese"
                            font_size:20
                        CheckBox:
                            on_active: root.checkbox_click(self, self.active, "Cheese")

                    GridLayout:
            #           radiobutton
            #            rows:1
                        cols:2

                        Label:
                            text: "ON"
                            font_size:20
                        CheckBox:
                            group: "pizza_toppings"
                            on_active: root.checkbox_click(self, self.active, "ON")

                        Label:
                            text: "OFF"
                            font_size:20
                        CheckBox:
                            group: "pizza_toppings"
                            on_active: root.checkbox_click(self, self.active, "OFF")

            AccordionItem:
                title: 'Panel3'

                BoxLayout:
                    orientation: "vertical"
                    size: root.width, root.height

#                    padding: 50
#                    spacing: 20

                    Image:
                        source: 'C:\\Users\\xmark\\OneDrive\\Képek\\istockphoto-1280385511-170667b.jpg'
#                        size_hint_x: 500.5
#                        size_hint_y: 500.5

#                    MDDropDownItem:
#                        id: drop_item
#                        pos_hint: {'center_x': .5, 'center_y': .5}
#                        text: 'Item 0'
#                        on_release: app.menu.open()

#                    DropDown:
#                        id: drop_item
#                        pos_hint: {'center_x': .5, 'center_y': .5}
#                        text: 'Item 0'
#                        on_release: app.menu.open()

                    ProgressBar:
                        id: my_progress_bar
                        value: .25
                        min: 0
                        max: 1
                        pos_hint: {'x': .1}
                        size_hint_x: .1

                    Button:
                        text: "Press Me!"
                        size_hint_x: .2
                        on_press: root.press_it()

                    Button:
                        id: btnExit
                        text: "Exit"
                        on_press: app.stop()



